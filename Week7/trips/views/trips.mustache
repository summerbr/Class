<html>
<head>
<link rel="stylesheet" href="style.css" />
</head>

<body>
  <h2>Add a new trip</h2>
  <form method="POST" action="/trips/addTrip">
    <input type="text" name="myCity" placeholder="Trip Name" />
    <input type="text" name="myDeparture" placeholder="Departure Date" />
    <input type="text" name="myReturn" placeholder="Return Date" />
    <input type="url" name="myImg" placeholder="url for trip image" />
    <button>Save</button>
  </form>

  <h1>Upcoming Trips</h1>
  <ul>
  {{#myTrips}}
  <li>
  <form class="card" method="POST" action="/trips/remove">
    <img src="{{imgURL}}" />
      <div class="text-block">
        <h2>{{city}}</h2>
        <h4>{{departureDate}} - {{returnDate}}</h4>
      </div>
      <input type="hidden" name="removeCity" value="{{city}}" />
        <button>Remove</button>
  </form>
  </li>
  {{/myTrips}}
  </ul>

</body>
</html>